@model GeekShoppingWeb.Models.ProductModel;

<form asp-action="ProductDelete">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Product</h1>
        <hr />
        <div class="row mt-3">

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Description" readonly class="form-control" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Price" readonly class="form-control" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-2">
                <label asp-for="Size" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Size" readonly class="form-control" />
            </div>
        </div>
        <div class="row mt-3">
                 <div class="col-2">
                <label asp-for="Category" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Category" readonly class="form-control" />
            </div>
        </div>
       
        <div class="row mt-3">
            <div class="col-6 mt-3">
                <input type="submit" value="Delete Product" class="btn btn-success form-control" />
            </div>
            <div class="col-6 mt-3">
                <input type="submit" value="Cancel" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>
